root = true

[*]
indent_style = space
indent_size = 2
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.{json,jsonc}]
indent_size = 2

[*.{yml,yaml}]
indent_size = 2

[*.{scss,css}]
indent_size = 2

[*.{ts,tsx,js,jsx}]
indent_size = 2

[Makefile]
indent_style = tab